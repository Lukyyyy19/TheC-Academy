@model BudgetApp.Models.TransactionViewModel
<form asp-action="Create" method="post">
    <div>
        <label class="form-label" asp-for="Transaction.CategoryId">Category</label>
        <select asp-for="Transaction.CategoryId">
            <option value="">Select a Category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="1">@category.Name</option>
            }
        </select>
    </div>
    <div>
        <label class="form-label" asp-for="Transaction.Description">Description</label>
        <input asp-for="Transaction.Description" class="form-control"/>
        <span asp-validation-for="Transaction.Description" class="text-danger"></span>
    </div>
    <div>
        <label class="form-label" asp-for="Transaction.Amount">Amount</label>
        <input asp-for="Transaction.Amount" class="form-control"/>
        <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
    </div>
    <div>
        <label class="form-label" asp-for="Transaction.Date">Date</label>
        <input asp-for="Transaction.Date" type="date" class="form-control"/>
        <span asp-validation-for="Transaction.Date" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}