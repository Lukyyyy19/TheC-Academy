@model BudgetApp.Models.TransactionViewModel
<form asp-action="Delete" method="post">
   <div>
      <h4>Are you sure you want to delete this transaction?</h4>
      <div>
         <label class="form-label">@Html.DisplayFor(model=>model.Transaction.Description)</label>
         <input type="hidden" asp-for="Transaction.Id" />
         <input type="submit" class="btn btn-danger" value="Delete"/>
         <a class="btn btn-secondary" asp-action="Index">Cancel</a>
      </div>
   </div>
</form>
