
@{
    ViewData["Title"] = "My ToDo List";
    Layout = "_Layout";
}

<h2>My ToDo List</h2>
<div class="modal-overlay" id="modal-overlay">
    <div id="center-banner" class="centered-banner">
        <input type="hidden" id="delete-id">
        Are you sure?<br>
        <button class="btn-primary btn" onclick="closeModal()">Cancel</button>
        <button onclick="deleteItem(document.getElementById('delete-id').value)" class="btn btn-danger">Delete</button>
    </div>
</div>
<div class="container" style="padding: 40px;margin: 1px auto;">
    <div class="text-white bg-dark border rounded p-4 p-md-5" style="border-radius: 6px;border-top-left-radius: 6px;border: 15px solid var(--bs-black);--bs-body-bg: var(--bs-gray-500);">
        <div>
            <form method="POST" action="javascript:void(0)" onsubmit="AddItem()" class="form-group">
                <input type="text" id="add-name" placeholder="New To-Do" class="form-group"/>
                <input type="submit" class="btn-primary btn" value="Add"/>
            </form>
        </div>
        <div id="editForm" style="display: none">
            <h3>Edit</h3>
            <form action="javascript:void(0);" onsubmit="UpdateItem()">
                <input type="hidden" id="edit-id">
                <input type="checkbox" id="edit-isComplete" class="form-check">
                <input type="text" id="edit-name">
                <input type="submit" value="Save" class="btn btn-primary">
                <a onclick="closeInput()" aria-label="Close">&#10006;</a>
            </form>
        </div>
        <div class="table-responsive border rounded" >
        <table class="table">
            <tr>
                <th class="text-center">Is Complete?</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
            <tbody id="todos"></tbody>
        </table>
        </div>
    </div>
</div>
<script src="js/site.js" asp-append-version="true"></script>
<script type="text/javascript">
    getItems();
</script>
